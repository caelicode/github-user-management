{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Organization Members Configuration",
  "type": "object",
  "required": ["members"],
  "properties": {
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["username", "role"],
        "properties": {
          "username": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]*[a-zA-Z0-9])?$",
            "description": "GitHub username (alphanumeric and hyphens, no leading/trailing hyphens)"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "member"],
            "description": "Organization role"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
